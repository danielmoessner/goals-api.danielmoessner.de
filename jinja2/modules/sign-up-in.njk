			</div>
		{% endif %}
		<form action="{{ url('users:signup') }}" method="POST">
			<input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
			<div class="sign-up-in--input-group">
				<label class="form-child--label" class="form-child--label">Username</label>
				<input type="text" class="form-child--input input" name="username" required>
			</div>
			<div class="sign-up-in--input-group">
				<label class="form-child--label">Password</label>
				<input type="password" class="form-child--input" name="password1" required>
			</div>
			<div class="sign-up-in--input-group">
				<label class="form-child--label">Password</label>
				<input type="password" class="form-child--input input" name="password2" required>
			</div>
			<input type="submit" value="Sign Up" class="sign-up-in--button">
		</form>
		<a type="button" href="{{ url('users:signin') }}" class="sign-up-in--switch-button" role="button">Go to the login page.</a>
